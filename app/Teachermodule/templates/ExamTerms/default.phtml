/**
 * @version default.phtml 25.2.2010
 * @param $courses
 */
{block #content}
    <h1>{_'Courses list'}</h1>
    {foreach $courses as $course}
    <a href="{plink listTerms course_id => $course->id, course => $course->name}" title="$course">{$course->name}, {$course->year}, {$course->semester}</a>
    {/foreach}
{/block}
